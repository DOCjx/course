#pragma once
#define MAXSIZE 2000
/**
* @description:用户学习或者教授的课程结构体
*/
typedef struct courseNode
{
	int courseId;
	char time;
	int counter;
	struct courseNode* next;
}courseList, *coursePoint;
/**
* @description:用户结构体
*/
typedef struct
{
	int id;
	int roleId;
	char name[20];
	char passwd[20];
	char institute[30];
	char phoneNum[20];
	char synopsis[100]; //摘要
	coursePoint firstChild;
	
}userNode;
