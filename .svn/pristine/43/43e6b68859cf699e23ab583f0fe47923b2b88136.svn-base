void teaCoursesSelect(){
    char *menuArr[]={
                    "教师之家",
                    "培养方案查询",
                    "安排课程",
                    "查询学生或同事信息",
                    "课表查询",
                    "当前位置：首页"
                };
    int loop=1;
    while( loop ){
        switch( showMenu(menuArr, 6) ){
            case 1: plansDetail();
                    break;
            case 3: seachTea();break;
            case -1: isLogout = 1; break;
            default: loop=0;
        }
        //如果全局为注销则退出当前菜单直到首页
        if( isLogout ) loop=0;
    }
}
